<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <context-param>
        <param-name>email</param-name>
        <param-value>471964854@qq.com</param-value>
    </context-param>
    <listener>
        <listener-class>com.nero.java.jsp.listener.MyServletRequestListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.nero.java.jsp.listener.MyServletRequestAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.nero.java.jsp.listener.MyHttpSessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.nero.java.jsp.listener.MyHttpSessionAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.nero.java.jsp.listener.MyHttpSessionActivationListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.nero.java.jsp.listener.MyServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.nero.java.jsp.listener.MyServletContextAttributeListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Ch3 Beer</servlet-name>
        <servlet-class>com.nero.java.jsp.servlet.BeerSelect</servlet-class>
        <init-param>
            <param-name>email</param-name>
            <param-value>471964854@qq.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CodeReturn</servlet-name>
        <servlet-class>com.nero.java.jsp.servlet.CodeReturn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>com.nero.java.jsp.servlet.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ch3 Beer</servlet-name>
        <url-pattern>/SelectBeer.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CodeReturn</servlet-name>
        <url-pattern>/download.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/welcome.do</url-pattern>
    </servlet-mapping>
    <error-page>
        <location>/jsp/error.jsp</location>
    </error-page>
</web-app>
